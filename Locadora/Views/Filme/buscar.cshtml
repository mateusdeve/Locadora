@model IEnumerable<Model.Filmes>

@{
    ViewBag.Title = "Buscar";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.titulo)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.duracao)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.ano)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.classificacao_id)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.produtora_id)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => item.titulo)</th>
                <td>@Html.DisplayFor(modelItem => item.duracao)</td>
                <td>@Html.DisplayFor(modelItem => item.ano)</td>
                <td>@Html.DisplayFor(modelItem => item.classificacao_id)</td>
                <td>@Html.DisplayFor(modelItem => item.produtora_id)</td>
            </tr>
        }
    </tbody>
</table>


